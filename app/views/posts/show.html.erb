<h2 align="center">Title: <%= @post.title %> </h2>
<div class="well col-xs-8 col-xs-offset-2">
  <h4 align="center"><strong>Content:</strong></h4> 
  <hr>
  
    <%= simple_format(@post.content) %>
      <h1><%= @post.comments.count %> Comments:</h1>
        <%= render @post.comments %>
        <%= render 'comments/form' %>

  <div class="post-actions">
  	<p class='post-comment-edit'>
      <%= link_to "Edit this post", edit_post_path(@post) %>
    </p>

    <p class="post-comment-view">
      <%= link_to "View all posts", posts_path %>
    </p>

    <p class='post-comment-delete'>
      <%= link_to "Delete the post", post_path(@post), method: :delete, data: {confirm: "Are you sure you want to delete this post?"} %>
    </p>
  </div>
</div>











