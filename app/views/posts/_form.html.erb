<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@post, :html => {class: "form-horizontal", role: "form"}) do |f| %>
    <div class="form-group">
      <div class="control-lable col-sm-2"></div>
      <div class="col-sm-8">
    <%= f.text_field :title, class: "form-control", placeholder: "Title", autofocus: true %>
      </div>
    </div>
    

    <div class="form-group">
      <div class="control-lable col-sm-2"></div>
      <div class="col-sm-8">
    <%= f.text_area :content, rows:10, class: "form-control", placeholder: "Share" %>
      </div>
    </div>


    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-10">
    <%= f.submit class: "btn btn-primary" %>
      </div>
    </div>
    <% end %>


    <div class="col-xs-4 col-xs-offset-4">
     { <%= link_to "Cancel request" %> }
    </div>
  </div>
</div>